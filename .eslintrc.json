{
    "env": {
        // "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        // "airbnb",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-use-before-define": "off",
        "@typescript-eslint/no-namespace": "off",
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": 1,
        "semi": "warn",
        "quotes": "warn",
        "eqeqeq": "warn",
        "eol-last": 1,
        "max-len": [1, 120],
        "no-trailing-spaces": "warn",
        "no-console": "warn",
        "indent": ["warn", 2, { "SwitchCase": 1 }],
        "arrow-parens": "warn",
        "arrow-spacing": "warn",
        "comma-spacing": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-shadow": "warn"
    },
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
            "typescript": {}
        }
    }
}